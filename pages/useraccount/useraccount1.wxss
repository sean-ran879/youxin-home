
.navagitorbar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #4b5566;
}

.navagitorbar text{
  margin: 25rpx;
  font-size: 28rpx;
  color: #ffffff;
}


.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #4b5566;
  height: 336rpx;
}

.userInfo_img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: #ffffff;
  border: solid 20rpx #404857;
  box-shadow: 0 0 0 12px #464f5e ;
    overflow: hidden;
}

.userInfo_name{
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #fff;
}

.useraccountinfo {
  flex: 1;
  background-color: #39404d;
  font-size: 32rpx;
  color: #4b5566;
}

.useraccount_content {
  margin-top: 100rpx;
  padding-left: 40rpx;
  padding-right: 80rpx;
}

.content_text {
  display: flex;
  flex-direction: row;
  padding-bottom: 40rpx;
     color: rgb(190, 185, 185);
}

.usermoney {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  padding: 0 40rpx 0 200rpx;
}

.userbalance{
  padding-top: 40rpx;
}

.useroperating{
  flex : 1 ;
}

.useroperating button{
  font-size: 32rpx;
  
  height: 100rpx;

  margin-left:36rpx;
  margin-right: 36rpx;
  line-height: 100rpx;
}

.recharge{
  color: #fff;
  background-color: #cba064;
  margin-top: 100rpx;
}

.withdraw {
  color: #fff;
  background-color: #4b5566;
  margin-top: 36rpx;
  margin-bottom: 36rpx;
}


.tenderDetail {
  position: fixed;
  /*top:408rpx;*/
  top:100%;
  height: 100%;
  width: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.tender-range{
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #39404d;
  padding: 0 36rpx;
  color: #fff;
  font-size: 28rpx;
}

.tender-range image{
  height: 36rpx;
  width: 36rpx;
}

.tender-bank{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 36rpx;
  background-color: #fff;
}

.tender-bank image{
  height: 64rpx;
  width: 64rpx;
}

.tender-bank_left{
  display: flex;
  flex-direction: row;

}

.tender-bank_left image{
  margin-right: 20rpx;
}

.tender-bank .right{
  height: 36rpx;
  width: 36rpx;
}

.tender-bank_text{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
  color: #999;
}

.tender-bank_text .top{
  font-size: 28rpx;
  color: #1c1f26;
}

.tender-money{
  margin-top: 72rpx;
  width: 100%;
  height: fit-content;
}

.tender-money_input{
  height: 100rpx;
  background-color: #fff;
  margin: 0 36rpx;
  box-sizing: border-box;
  border: solid 1rpx #ddd;
}

.tender-money_input input{
  padding-left: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #999999;
}

.tender-money_submit{
  margin: 36rpx 36rpx 36rpx 36rpx;
  height: 100rpx;
  background-color: #cba064;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
}

.opacity{ 
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  opacity:0.3; 
  background-color:#000000; 
  transition:#fff 0.4s ease ;
} 