<view class="opinion_wrap">
  <view class="wrap">
    <form bindsubmit="formSubmit">
      <view class="contant_wrap">
        <view class="contant">
          <textarea name="opinion" value="{{opinion}}" auto-height placeholder-class="placeholder" placeholder="为了带给您更好的体验,期待您的任何反馈,我们将会不断改进" />
        </view>
      </view>
      <view class="phone">
        <input name="phone" value="{{phone}}" placeholder-class="placeholder" placeholder="请输入手机号或邮箱方便回复" />
      </view>
      <button formType="submit" hover-class="none">提交</button>
    </form>
  </view>
</view>